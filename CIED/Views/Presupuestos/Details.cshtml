@model CIED.Models.Presupuesto

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    @{
        ViewData["Title"] = "Detalle";
    }

    <h2>Detalle</h2>

    <div>
        <h4>Presupuesto</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Anio)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Anio)
            </dd>
        </dl>
    </div>
    <p>
        <a asp-controller="PresupuestoDetalle" asp-action="Create" asp-route-id="@Model.PresupuestoID">Agregar Partida</a>
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>
                        Categoria
                    </th>
                    <th>
                        Presupuesto
                    </th>
                    <th>
                        Gastado
                    </th>
                    <th>
                        Cantidad Restante
                    </th>
                    <th>
                        Porcentaje Restante
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PresupuestoDetalle)
                {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
                    </td>
                    <td> @Html.DisplayFor(modelItem => item.Partida)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Real)
                    </td>
                    <td> @Html.DisplayFor(modelItem => item.CantidadRestante)</td>
                    <td> @Html.DisplayFor(modelItem => item.PorcentajeRestante)</td>
                    <td>
                        <a asp-controller="PresupuestoDetalle" asp-action="Edit" asp-route-id="@item.PresupuestoDetalleID">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.PresupuestoDetalleID">Detalle</a> |
                        <a asp-action="Delete" asp-route-id="@item.PresupuestoDetalleID">Eliminar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.PresupuestoID">Editar</a> |
        <a asp-action="Index">Regresar</a>
    </div>
</main>