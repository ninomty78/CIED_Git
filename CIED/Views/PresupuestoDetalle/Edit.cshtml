@model CIED.Models.PresupuestoDetalle
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    @{
        ViewData["Title"] = "Editar";
    }

    <h2>Editar</h2>

    <h4>Presupuesto Detalle</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PresupuestoDetalleID" />
                <div class="form-group">
                    <label asp-for="PresupuestoID" class="control-label"></label>
                    <select asp-for="PresupuestoID" class="form-control" asp-items="ViewBag.PresupuestoID"></select>
                    <span asp-validation-for="PresupuestoID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoriaID" class="control-label"></label>
                    <select asp-for="CategoriaID" class="form-control" asp-items="ViewBag.CategoriaID"></select>
                    <span asp-validation-for="CategoriaID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Partida" class="control-label"></label>
                    <input asp-for="Partida" class="form-control" />
                    <span asp-validation-for="Partida" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Presupuestos" asp-action="Details" asp-route-id="@Model.PresupuestoID" >Regresar</a>
    </div>
    </main>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
