@model IEnumerable<CIED.Models.Categoria>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    @{
        ViewData["Title"] = "Index";
    }

    <h2>Categorias</h2>

    <p>
        <a asp-action="Create">Agregar</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estatus)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estatus)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoriaID">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.CategoriaID">Detalle</a> |
                        <a asp-action="Delete" asp-route-id="@item.CategoriaID">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </main>